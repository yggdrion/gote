{
    "name": "gote",
    "version": "1.0.0",
    "description": "Go note-taking app ported to Bun/TypeScript",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "start": "bun run dist/index.js",
        "update-vendor": "bun run scripts/update-vendor.js",
        "check-vendor": "bun run scripts/check-vendor.js",
        "migration-check": "bun run scripts/migration-check.ts",
        "test": "bun run scripts/test-app.ts && bun run scripts/test-template-debug.ts",
        "test:crypto": "bun run scripts/test-app.ts",
        "test:templates": "bun run scripts/test-template-debug.ts"
    },
    "dependencies": {
        "highlight.js": "11.11.0",
        "marked": "16.1.1",
        "marked-highlight": "^2.2.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^24.1.0",
        "semver": "^7.0.0"
    }
}
