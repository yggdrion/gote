{
    "branches": [
        "main"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "releaseRules": [
                    {
                        "type": "chore",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "writerOpts": {
                    "commitGroupsSort": "title",
                    "groupBy": "type",
                    "commitGroups": [
                        {
                            "title": "‚ú® Features"
                        },
                        {
                            "title": "üêõ Bug Fixes"
                        },
                        {
                            "title": "üìù Documentation"
                        },
                        {
                            "title": "üîß Chores"
                        },
                        {
                            "title": "üö® Tests"
                        },
                        {
                            "title": "‚ö° Performance"
                        },
                        {
                            "title": "‚¨ÜÔ∏è Dependencies"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog"
        ],
        [
            "@semantic-release/github",
            {
                "addReleases": "bottom",
                "releasedLabels": false,
                "failComment": false,
                "failTitle": false,
                "assets": [
                    {
                        "path": "release-assets/gote-windows-amd64.exe",
                        "name": "gote-windows-amd64.exe",
                        "label": "Gote for Windows (AMD64)"
                    },
                    {
                        "path": "release-assets/gote-macos-amd64.app.zip",
                        "name": "gote-macos-amd64.app.zip",
                        "label": "Gote for macOS (Intel)"
                    },
                    {
                        "path": "release-assets/gote-macos-arm64.app.zip",
                        "name": "gote-macos-arm64.app.zip",
                        "label": "Gote for macOS (Apple Silicon)"
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
                "pushForce": true
            }
        ],
        [
            "semantic-release-export-data"
        ]
    ]
}
